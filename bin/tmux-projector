#!/bin/sh

search_dir=$HOME/projects

name=$(find $search_dir -maxdepth 1 -mindepth 1 -type d | sed "s|^$HOME/||" | fzf)

if [ -z $name ]; then
    exit
fi

directory=$HOME/$name

if tmux has-session -t $name; then
    tmux attach -t $name
else
    tmux new-session -d -c $directory -s $name
    tmux attach -t $name
fi
