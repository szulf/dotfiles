{
    "clock": {
        "format": "{:%R}",
        "tooltip": true,
        "tooltip-format": "{:%A %d.%m.%Y}",
    },

    "memory": {
        "format": "{used}GB <span size='x-large'></span>",
        "on-click": "ghostty -e btop &",
    },

    "cpu": {
        "format": "{usage}% <span size='x-large'></span>",
        "on-click": "ghostty -e btop &",
    },

    "pulseaudio": {
        "format": "{volume}% <span size='x-large'>󰕾</span>",
        "tooltip-format": "Volume ({volume}%)",
        "on-click": "pavucontrol",
    },

    "network": {
        "format": "{bandwidthDownBytes} <span size='x-large'>󰤨</span>",
        "interval": 10,
        "format-disconnected": "<span size='x-large'>󰤭</span>",
        "tooltip-format": "{ifname} {ipaddr}",
        "on-click": "ghostty -e nmtui &",
    },

    "custom/power": {
        "format": "<span size='x-large'>󰐥</span>",
        "tooltip": true,
        "tooltip-format": "Power menu",
    },
}
