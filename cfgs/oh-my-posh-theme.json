{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "palette": {
        "os": "#ACB0BE",
        "closer": "p:os",
        "pink": "#F5C2E7",
        "red": "#FF6D6D",
        "lavender": "#B4BEFE",
        "blue":  "#89B4FA"
    },
    "blocks": [
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "p:os",
                    "style": "plain",
                    "template": "{{.Icon}} ",
                    "type": "os"
                },
                {
                    "foreground": "p:blue",
                    "style": "plain",
                    "template": "{{ .UserName }}@{{ .HostName }} ",
                    "type": "session"
                },
                {
                    "style": "plain",
                    "foreground": "p:closer",
                    "template": "- ",
                    "type": "text"
                },
                {
                    "foreground": "p:pink",
                    "properties": {
                        "home_icon": "~",
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "p:lavender",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "cherry_pick_icon": "\ue29b ",
                        "commit_icon": "\uf417 ",
                        "fetch_status": true,
                        "fetch_upstream_icon": false,
                        "merge_icon": "\ue727 ",
                        "no_commits_icon": "\uf0c3 ",
                        "rebase_icon": "\ue728 ",
                        "revert_icon": "\uf0e2 ",
                        "tag_icon": "\uf412 "
                    },
                    "template": "<p:closer>- </>{{ .HEAD }}{{ if or (.Staging.Changed) (.Working.Changed) }}<p:red>!{{ end }}",
                    "style": "plain",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "status",
                    "style": "plain",
                    "foreground": "p:closer",
                    "template": "{{ if .Error }}<p:red>{{end}}>",
                    "properties": {
                        "always_enabled": true
                    }
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}
